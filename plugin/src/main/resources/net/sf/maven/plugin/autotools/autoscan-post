sed -e 's/^AC_INIT.*/AC_INIT([a.out],[1.0])\
AM_INIT_AUTOMAKE/' -e 's/^AC_OUTPUT/AC_CONFIG_FILES([Makefile])\
AC_OUTPUT/' configure.scan > configure.ac
